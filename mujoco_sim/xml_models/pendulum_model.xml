<mujoco>
    <compiler angle="radian" coordinate="local" />
    <option timestep="0.01" gravity="0 0 -9.81"/>

    <worldbody>
        <body name="base" pos="0 0 0">
            <geom type="sphere" size="0.05" rgba="0.2 0.3 0.3 1"/>
            
            <body name="link1" pos="0 0 0">
                <joint name="joint1" type="hinge" axis="0 0 1"/>
                <geom type="capsule" fromto="0 0 0 0.1 0 0" size="0.01" rgba="0.5 0 0 1"/>

                <body name="pendulum" pos="0.1 0 0">
                    <joint name="encoder_joint" type="hinge" axis="1 0 0" damping="0.003"/>
                    <geom type="capsule" fromto="0 0 0 0 0 0.3" size="0.01" rgba="0 0.5 0 1"/>            
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <position joint="joint1"/>        
    </actuator>
    <sensor>
        <jointpos joint="encoder_joint"/>
    </sensor>
</mujoco>